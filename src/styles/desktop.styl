*
  box-sizing border-box
  margin 0
  padding 0

body
  background-color #efefef

table
  width 100%
  border-collapse collapse

th
td
  padding 8px
  border 1px solid #ddd
  text-align left

//

#layout-main
  padding 40px 32px 0 32px

#layout-header
#layout-footer
  position fixed
  left 0
  width 100%

#layout-header
  top 0
  padding 8px

#layout-footer
  bottom 0
  padding 8px
  background-color grey
  color white
  text-align right

//

.img-avatar
  display block
  size 40px
  margin 0 auto
  border-radius 50%
